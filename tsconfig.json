{
    "compilerOptions": {
        "target": "ES2020",
        "moduleDetection": "force",
        "module": "commonjs",
        "allowSyntheticDefaultImports": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "strict": true,
        "typeRoots": [
            "./node_modules/@types",
            "src/types"
        ]
    },
    "include": [
        "src/**/*"
    ]
}