//run after changes to model to update database: npx prisma migrate dev --name <add-a-name> 

model FoodItem {
    id        String           @id @default(cuid())
    name      String           @unique
    calories  Int
    fat       Float
    carbs     Float
    protein   Float
    recipes   RecipeFoodItem[]
    createdAt DateTime         @default(now())
    updatedAt DateTime         @updatedAt
}
