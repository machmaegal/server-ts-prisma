//run after changes to model to update database: npx prisma migrate dev --name <add-a-name> 

model User {
    id        String   @id @default(cuid())
    email     String   @unique
    password  String
    isAdmin   Boolean? @default(false)
    recipes   Recipe[]
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
